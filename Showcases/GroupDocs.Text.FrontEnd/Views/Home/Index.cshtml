<!DOCTYPE html>
<html ng-app="app">
<head>
    <meta name="viewport" content="width=device-width" />
    <title>GroupDocs.Text</title>
    <link href="~/Content/bootstrap.min.css" rel="stylesheet" />
    <script src="~/Scripts/jquery-1.9.1.min.js"></script>
    <script src="~/Scripts/bootstrap.min.js"></script>
    <script src="~/Scripts/angular.js"></script>
    <script src="~/Scripts/angular-upload.min.js"></script>
    <script src="~/Scripts/App/homeController.js"></script>
    <script src="~/Scripts/App/cellsController.js"></script>
    <script src="~/Scripts/App/searchController.js"></script>
    <script src="~/Scripts/App/passwordController.js"></script>
    <script src="~/Scripts/angular-sanitize.min.js"></script>
    
    <!-- Include UI Bootstrap library -->
    <script src="https://cdnjs.cloudflare.com/ajax/libs/angular-ui-bootstrap/2.4.0/ui-bootstrap-tpls.min.js"></script>
</head>
<body ng-controller="homeController">
    <div  style="background-image : url(../Content/Images/Header1.png); background-position:center ">
        <div class="container ">
            <div class="row">
                <div class="col-md-2"></div>
                <div class="col-md-6">
                   <h1 style="font-size:35px; min-width:100%; font-family: 'Open Sans',sans-serif; font-weight: lighter!important; margin-top: 60px; color:#fff">GroupDocs.Text Sample Front End</h1>
                </div>
                <div class="col-md-4">
                    <img style="max-width:150px;" src="~/Content/Images/groupdocs-text-for-net.png">
                </div>
            </div>
        </div>
    </div>
    <div class="container" style="border:solid; border-color:#3071a9!important;">
        <div class="row" >
            <div class="col-md-1" style="text-align:left">
                <input style="margin-top:7px;margin-bottom:8px; color:transparent" ng-model="uploadedFileName" onchange="angular.element(this).scope().uploadFile(this)" type="file"/>
            </div>
            <div class="col-md-11" style="text-align:left">
                <div class="col-md-1" style="text-align:left">
                    <button ng-click="extractMetadata()" ng-disabled="metadataEnabled != 'true' " style="background: url(../Content/Images/ExtractMetadata.png) left center no-repeat; height:32px; width:32px; padding-left: 15px" title="Extract Metadata"></button>
                </div>
                <div class="col-md-1" style="text-align:left">
                    <button ng-click="open()" ng-disabled="cellsEnabled != 'true' " style="background: url(../Content/Images/ExtractRows.png) left center no-repeat; height:32px; width:32px; padding-left: 15px" title="Extract Text From Rows"></button>
                </div>
                <div class="col-md-1" style="text-align:left">
                    <button ng-click="openColumnsPopup()" ng-disabled="cellsEnabled != 'true' "  style="background: url(../Content/Images/ExtractColumns.png) left center no-repeat; height:32px; width:32px; padding-left: 15px" title="Extract Text From Columns"></button>
                </div>
                <div class="col-md-1" style="text-align:left">
                    <button ng-click="openRowAndColumnPopup()"ng-disabled="cellsEnabled != 'true' " style="background: url(../Content/Images/ExtractRowsAndColumns.png) left center no-repeat; height:32px; width:32px; padding-left: 15px" title="Extract Text From Row and Column"></button>
                </div>
                <div class="col-md-1" style="text-align:left">
                    <button ng-click="extractTableWithFormat()" ng-disabled="wordsEnabled != 'true' " style="background: url(../Content/Images/ExtractTable.png) left center no-repeat; height:32px; width:32px; padding-left: 15px" title="Extract Table With Format"></button>
                </div>
                <div class="col-md-1" style="text-align:left">
                    <button ng-click="extractTextWithMarkDown()"  ng-disabled="wordsEnabled != 'true' " style="background: url(../Content/Images/ExtractTextWithMarkDown.png) left center no-repeat; height:32px; width:32px; padding-left: 15px" title="Extract Text With Markdown"></button>
                </div>
                <div class="col-md-1" style="text-align:left">
                    <button ng-click="extractDocumentEndocing()"ng-disabled="encodingEnabled != 'true' " style="background: url(../Content/Images/ExtractEncoding.png) left center no-repeat; height:32px; width:32px; padding-left: 15px" title="Extract Docuemnt Encoding"></button>
                </div>
                <div class="col-md-1" style="text-align:left">
                    <button ng-click="countStatistics()" ng-disabled="statisticsEnabled != 'true' " style="background: url(../Content/Images/CountStatistics.png) left center no-repeat; height:32px; width:32px; padding-left: 15px" title="Count Statistics"></button>
                </div>
                <div class="col-md-1" style="text-align:left">
                    <button ng-click="openSearchPopup()" ng-disabled="searchEnabled != 'true' " style="background: url(../Content/Images/CountStatistics.png) left center no-repeat; height:32px; width:32px; padding-left: 15px" title="Srearch Text"></button>
                </div>
                <div class="col-md-1" style="text-align:left">
                    <button ng-click="extractExtractHighlight()" ng-disabled="highlightEnabled != 'true' " style="background: url(../Content/Images/CountStatistics.png) left center no-repeat; height:32px; width:32px; padding-left: 15px" title="Extract Highlighted Text"></button>
                </div>
            </div>
        </div>
    </div>
    <div class="container" style="border:solid;position: relative; border-color:#3071a9!important; height: 842px;  overflow-y: scroll; margin-bottom:50px">
        <div ng-repeat="line in text.lines track by $index">
            <span ng-bind-html="line"></span>
            <br />
        </div>
       
    </div>
</body>
</html>
